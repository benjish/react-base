{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react",
    "module": "esnext",
    "target": "ESNext",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
